experiment "Tests for msi.gaml.architecture.simplebdi" type: test {

	test "Operator get_intensity" {
		assert get_intensity(new_emotion('joy',1.0))=1.0;
		assert get_intensity(new_emotion('joy',1.0,0.5))=1.0;
	}

	test "Operator get_lifetime" {
		assert get_lifetime(new_mental_state('Belief',new_predicate('test1'),4))=4;
	}

	test "Operator get_modality" {
		assert get_modality(new_mental_state('Belief',new_predicate('test1')))='Belief';
	}

	test "Operator get_decay" {
		assert get_decay(new_emotion('joy',1.0,0.5))=0.5;
	}

	test "Operator get_truth" {
		assert get_truth(new_predicate('test1'))=true;
	}

	test "Operator new_emotion" {
		assert get_intensity(new_emotion('joy',12.3)) = 12.3;
	}

	test "Operator get_strength" {
		assert get_strength(new_mental_state('Belief',new_predicate('test1')))=1.0;
	}

}