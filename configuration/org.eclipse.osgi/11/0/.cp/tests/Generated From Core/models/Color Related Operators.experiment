experiment "Run Tests" type: test {	

	
		test "blend" {
			rgb var2 <- blend(#red, #blue); 	// var2 equals rgb(127,0,127)
			assert var2 = rgb(127,0,127); 
			//rgb var3 <- blend(#red, #blue); 	// var3 equals to a color very close to the purple
			rgb var0 <- blend(#red, #blue, 0.3); 	// var0 equals rgb(76,0,178)
			assert var0 = rgb(76,0,178); 
			//rgb var1 <- blend(#red, #blue, 0.3); 	// var1 equals to a color between the purple and the blue

		}
	
		test "Divide" {
			point var0 <- {5, 7.5} / 2.5; 	// var0 equals {2, 3}
			assert var0 = {2, 3}; 
			point var1 <- {2,5} / 4; 	// var1 equals {0.5,1.25}
			assert var1 = {0.5,1.25}; 
			rgb var2 <- rgb([255, 128, 32]) / 2.5; 	// var2 equals rgb([102,51,13])
			assert var2 = rgb([102,51,13]); 
			rgb var3 <- rgb([255, 128, 32]) / 2; 	// var3 equals rgb([127,64,16])
			assert var3 = rgb([127,64,16]); 
			float var4 <- 3 / 5.0; 	// var4 equals 0.6
			assert var4 = 0.6; 

		}
	
		test "grayscale" {
			//rgb var0 <- grayscale (rgb(255,0,0)); 	// var0 equals to a dark grey
			rgb var1 <- grayscale (rgb(255,0,0)); 	// var1 equals rgb(76,76,76)
			assert var1 = rgb(76,76,76); 

		}
	
		test "hsb" {
			rgb var0 <- hsb (0.5,1.0,1.0,0.0); 	// var0 equals rgb("cyan",0)
			assert var0 = rgb("cyan",0); 
			rgb var1 <- hsb (0.0,1.0,1.0); 	// var1 equals rgb("red")
			assert var1 = rgb("red"); 

		}
	
		test "rgb" {
			rgb var0 <- rgb (255,0,0); 	// var0 equals #red
			assert var0 = #red; 
			rgb var1 <- rgb(rgb(255,0,0),125); 	// var1 equals a light red color
			rgb var2 <- rgb ("red"); 	// var2 equals rgb(255,0,0)
			assert var2 = rgb(255,0,0); 
			rgb var3 <- rgb(rgb(255,0,0),0.5); 	// var3 equals a light red color
			rgb var4 <- rgb (255,0,0,125); 	// var4 equals a light red color
			int var5 <- rgb (255,0,0,125).alpha; 	// var5 equals 125
			assert var5 = 125; 
			rgb var6 <- rgb (255,0,0,0.5); 	// var6 equals a light red color

		}
	
}

	